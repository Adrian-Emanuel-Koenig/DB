    <form 
    id="sendForm"
    class="d-flex justify-content-center align-items-center flex-column"
    style="height: 100vh"
>
    <div class="mb-3">
        <label for="title" class="form-label"
            >Title</label
        >
        <input
            type="text"
            class="form-control"
            id="title"
            aria-describedby="emailHelp"
            name="title"
        />
    </div>
    <div class="mb-3">
        <label for="price" class="form-label"
            >Price</label
        >
        <input
            type="number"
            class="form-control"
            id="price"
            aria-describedby="emailHelp"
            name="price"
        />
    </div>
    <div class="mb-3">
        <label for="thumbnail" class="form-label"
            >Img URL</label
        >
        <input
            type="text"
            class="form-control"
            id="thumbnail"
            aria-describedby="emailHelp"
            name="thumbnail"
        />
    </div>
    <button type="submit" class="btn btn-primary">
        Upload product
    </button>
    </form>